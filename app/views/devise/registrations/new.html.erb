<div class="registrations-main">
  <div class="inner">
    <div class="form__wrapper">

      <h3 class="page-heading">
        ユーザー新規登録
      </h3>

      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="input-form">
          <div class="field">
            <%= f.label :nickname, "ユーザー名" %><br />
            <%= f.text_field :nickname, id:"user_name", class:"input_text"%>
          </div>
          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email", class:"input_text" %>
          </div>
          <div class="field">
            <%= f.label :password, "パスワード（半角英数字6文字以上）" %><br />
            <%= f.password_field :password, id:"user_password", autocomplete: "new-password", class:"input_text" %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation, "パスワード再入力" %><br />
            <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password", class:"input_text" %>
          </div>
          <div class="actions">
            <%= f.submit "新規登録", class: :form__btn  %>
          </div>

        </div>
      </div>

    <% end %>
  </div>
</div>  

